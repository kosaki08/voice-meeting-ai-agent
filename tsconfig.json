{
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "module": "ESNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"],
      "@ports/*": ["./src/ports/*"],
      "@adapters/*": ["./src/adapters/*"],
      "@domain/*": ["./src/domain/*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "examples/**/*.ts", "jest.config.ts", "jest.integration.config.ts", "tsup.config.ts"],
  "exclude": ["node_modules", "dist"]
}
